report.weekly.labels=ID,Project,Description,Tags,Starts,Due
report.weekly.sort=project+/,urgency-
report.weekly.filter=+PENDING -delegated -archive -errand -hold project.not:maybe project.not:checklist project.not:ticklers project.not:values project.not:INBOX

